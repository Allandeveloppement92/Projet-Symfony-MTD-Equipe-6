{% extends 'base.html.twig' %}

{% block title %}Pokédex{% endblock %}

{% block body %}
    <h1 class="text-center text-white p-3">Pokédex</h1>

    <table class="table table-striped table-light m-auto justify-content-center w-75">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pokedex.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pokedex.name }}</td>
            </tr>
            {# <tr>
                <th>Pokemons</th>
                <td>{{ pokedex.pokemon.name }}</td>
            </tr> #}
        </tbody>
    </table>

    <div class="text-center p-3">
    <button class="m-auto text-white p-2 bg-dark">

    <a class="text-white" href="{{ path('pokedex_index') }}">Retour à la liste</a>
    </button>
    <button class="m-auto text-white p-2 bg-dark">
    <a class="text-white" href="{{ path('pokedex_edit', {'id': pokedex.id}) }}">Modifier</a>
    </button>
    </div>
    {{ include('pokedex/_delete_form.html.twig') }}
{% endblock %}
