{% extends 'base.html.twig' %}

{% block title %}Pokédex{% endblock %}

{% block body %}
    <h1 class="text-center text-white p-3">Pokédex</h1>

    <table class="table table-striped table-light m-auto justify-content-center w-75">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pokedex in pokedexes %}
            <tr>
                <td>{{ pokedex.id }}</td>
                <td>{{ pokedex.name }}</td>
                <td>
                    <a href="{{ path('pokedex_show', {'id': pokedex.id}) }}">Afficher</a>
                    <a href="{{ path('pokedex_edit', {'id': pokedex.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center p-3">
    <button class="m-auto p2 bg-dark">
    <a href="{{ path('pokemon_new') }}" class="text-white">Créer un nouveau Pokémon</a>
    </button>
    </div>

{% endblock %}
