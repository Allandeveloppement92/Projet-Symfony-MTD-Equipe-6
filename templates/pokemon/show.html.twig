{% extends 'base.html.twig' %}

{% block title %}Pokémon{% endblock %}

{% block body %}
    <h1 class="text-center text-white p-3">Pokémon</h1>

    <table class="table table-striped table-light m-auto justify-content-center w-50">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pokemon.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pokemon.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ pokemon.type }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ pokemon.height }} m</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ pokemon.weight }} kg</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center p-3">
    <button class="m-auto p-2 bg-dark">

    <a class="text-white" href="{{ path('pokemon_index') }}">Retour à la liste</a>
    </button>
    <button class="m-auto p-2 bg-dark">
    <a class="text-white" href="{{ path('pokemon_edit', {'id': pokemon.id}) }}">Modifier</a>
    </button>
    </div>
    {{ include('pokemon/_delete_form.html.twig') }}
{% endblock %}
