{% extends 'base.html.twig' %}

{% block title %}Pokémon index{% endblock %}

{% block body %}

    <h1 class="text-center text-white p-3">Pokémon index</h1>

    <table class="table table-striped table-light m-auto justify-content-center w-75">
        <thead class="thead-dark">
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>Type</th>
                <th>Taille</th>
                <th>Poids</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pokemon in pokemon %}
            <tr>
                {# <td>{{ pokemon.id }}</td> #}
                <td>{{ pokemon.name }}</td>
                <td>{{ pokemon.type }}</td>
                <td>{{ pokemon.height }} m</td>
                <td>{{ pokemon.weight }} kg</td>
                <td>
                    <a href="{{ path('pokemon_show', {'id': pokemon.id}) }}">Afficher</a>
                    <a href="{{ path('pokemon_edit', {'id': pokemon.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center p-2">
    <button class="m-auto p-2 bg-dark">
    <a href="{{ path('pokemon_new') }}" class="text-white">Créer un nouveau Pokémon</a>
    </button>
    </div>
    </div>
{% endblock %}
